{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2023"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"declaration": true,
		"sourceMap": true,
		"stripInternal": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"composite": true,
		"incremental": true,
		"noEmitOnError": true
	}
}
