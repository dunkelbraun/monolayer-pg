{
	"name": "monolayer",
	"private": true,
	"type": "module",
	"license": "MIT",
	"workspaces": [
		"__config__/*",
		"apps/*",
		"internal/*",
		"packages/*",
		"private/*",
		"private-apps/*",
		"docs"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"prettier": {
		"trailingComma": "all",
		"useTabs": true,
		"tabWidth": 2,
		"semi": true,
		"singleQuote": false,
		"plugins": [
			"prettier-plugin-organize-imports"
		]
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.15.4",
		"@config/testing": "*",
		"kysely": "^0.27.2",
		"mermaid": "^10.9.1",
		"npm-run-all": "^4.1.5",
		"patch-package": "^8.0.0",
		"pg": "^8.11.3",
		"search-insights": "^2.17.0",
		"turbo": "^2.1.0",
		"turbo-ignore": "^2.0.12",
		"typedoc": "^0.26.5",
		"typedoc-plugin-markdown": "^4.2.3",
		"typedoc-vitepress-theme": "^1.0.1",
		"typescript": "^5.6.2",
		"vite-plugin-dynamic-import": "^1.5.0",
		"vitepress": "^1.3.2",
		"vitepress-plugin-mermaid": "^2.0.16",
		"vitepress-sidebar": "^1.24.2",
		"zod": "^3.22.2"
	},
	"packageManager": "^npm@10.8.2",
	"scripts": {
		"test": "NO_COLOR=1 vitest",
		"test:watch": "NO_COLOR=1 vitest ${TEST_FILE} --pool=forks --watch --ui --open=false",
		"typedoc": "typedoc --docsRoot docs/reference",
		"typedoc:watch": "npm run typedoc -- --watch",
		"postinstall": "patch-package",
		"predocs": "npm run typedoc",
		"docs": "npm-run-all --parallel docs:dev typedoc:watch",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	}
}
