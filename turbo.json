{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			]
		},
		"bundle": {
			"dependsOn": [
				"^bundle"
			]
		},
		"check": {
			"dependsOn": [
				"^check"
			]
		},
		"package": {
			"dependsOn": [
				"^package"
			]
		},
		"test": {
			"dependsOn": [
				"^test"
			],
			"env": [
				"POSTGRES_*"
			]
		},
		"unpublish:local": {
			"dependsOn": [
				"^unpublish:local"
			],
			"cache": false
		},
		"publish:local": {
			"dependsOn": [
				"^publish:local"
			],
			"cache": false
		}
	}
}
