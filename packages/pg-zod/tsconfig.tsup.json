{
	"include": ["**/src/**/*"],
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": ".",
		"target": "es2022",
		"lib": ["es2023"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"sourceMap": true,
		"stripInternal": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"composite": false,
		"incremental": false,
		"noEmitOnError": true,
		"paths": {
			"~pg-zod/*": ["src/*"],
			"~pg/*": ["../../internal/pg/src/*"]
		}
	}
}
