{
	"extends": ["@monorepo/typescript-config/tsconfig.base.json"],
	"include": ["src/**/*", "tests/**/*"],
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": ".",
		"outDir": "./../../build/local/state",
		"tsBuildInfoFile": "./../../build/local/state/tsconfig.build.tsbuildinfo",
		"composite": true,
		"paths": {
			"~state/*": ["src/*"]
		},
		"emitDeclarationOnly": true,
		"declaration": true
	},
	"references": [
		{ "path": "../cli" },
		{ "path": "../configuration" },
		{ "path": "../utils" }
	]
}
