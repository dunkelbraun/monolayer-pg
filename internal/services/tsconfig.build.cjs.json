{
	"extends": "./tsconfig.json",
	"include": ["src/**/*"],
	"compilerOptions": {
		"emitDeclarationOnly": false,
		"sourceMap": false,
		"rootDir": "src",
		"outDir": "dist/cjs",
		"target": "es2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"incremental": true,
		"tsBuildInfoFile": "dist/tsconfig.build.cjs.tsbuildinfo",
		"paths": {
			"~services/*": ["src/*"],
			"@monorepo/cli/*": ["../cli/src/*"],
			"@monorepo/pg/*": ["../pg/src/*"],
			"@monorepo/state/*": ["../state/src/*"],
			"@monorepo/utils/*": ["../utils/src/*"]
		}
	},
	"references": [
		{ "path": "../cli" },
		{ "path": "../pg" },
		{ "path": "../state" },
		{ "path": "../utils" }
	]
}
